<?xml version="1.0" encoding="utf-8"?>
<!-- Root ConstraintLayout containing all UI components -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassActivity"
    android:background="@drawable/bb_marble">

    <!-- Decorative image at the top of the screen -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="413dp"
        android:layout_height="278dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/black_squiggle" />

    <!-- Title text for "Forgot Password" screen -->
    <TextView
        android:id="@+id/ForgotPasstxt"
        android:text="FORGOT PASSWORD"
        android:layout_width="273dp"
        android:layout_height="161dp"
        android:layout_marginTop="56dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Background curved gradient image for styling -->
    <ImageView
        android:id="@+id/gradientCurvedBg"
        android:layout_width="492dp"
        android:layout_height="669dp"
        android:layout_marginTop="240dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gradient_curved_bg" />

    <!-- Input field where user enters their email -->
    <EditText
        android:id="@+id/createEmailInput"
        android:layout_width="189dp"
        android:layout_height="48dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/edit_text_bg"
        android:hint="ENTER EMAIL"
        android:inputType="textEmailSubject"
        android:padding="10dp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <!-- Instructional text for email input -->
    <TextView
        android:id="@+id/emailTxt"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="ENTER YOUR EMAIL TO RESET YOUR PASSWORD"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <!-- Decorative line image below email instructions -->
    <ImageView
        android:id="@+id/lineView"
        android:layout_width="410dp"
        android:layout_height="10dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailTxt"
        app:srcCompat="@drawable/white_line" />

    <!-- Button to submit the email for password reset -->
    <Button
        android:id="@+id/submitBtn"
        android:layout_width="189dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/neon_blue_button"
        android:backgroundTint="@null"
        android:text="SUBMIT"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/createEmailInput" />

    <!-- Confirmation or reminder message about email verification -->
    <TextView
        android:id="@+id/alreadyRegisteredtxt"
        android:layout_width="254dp"
        android:layout_height="79dp"
        android:layout_marginTop="10dp"
        android:text="YOUR EMAIL WILL BE VERIFIED FIRST AND THEN YOU WILL BE ABLE TO RESET IT"
        android:textAlignment="center"
        android:textColor="#FF1493"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/submitBtn" />

    <!-- Prompt asking if user remembers their password -->
    <TextView
        android:id="@+id/RememberPasswordtTxt"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="REMEMBER YOUR PASSWORD?"
        android:textColor="#009688"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alreadyRegisteredtxt" />

    <!-- Button to navigate user back to login screen -->
    <Button
        android:id="@+id/LoginBtn"
        android:layout_width="189dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/login_button_colour"
        android:backgroundTint="@null"
        android:text="LOGIN HERE"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/RememberPasswordtTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>
