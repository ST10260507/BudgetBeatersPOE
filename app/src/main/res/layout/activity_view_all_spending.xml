<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb_marble"
    tools:context=".ViewAllSpendingActivity">

    <!-- Top Banner ImageView -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/title_banner" />


    <!-- Gradient Curved Background ImageView -->
    <ImageView
        android:id="@+id/gradientCurvedBg"
        android:layout_width="492dp"
        android:layout_height="669dp"
        android:layout_marginTop="125dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.753"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gradient_curved_bg" />

    <!-- Main Title TextView: View Daily Spending -->
    <TextView
        android:id="@+id/ViewAllSpendingtxt"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="VIEW DAILY SPENDING"
        android:textColor="@android:color/white"
        android:textSize="29sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageView" />

    <!-- Time Period Selection TextView -->
    <TextView
        android:id="@+id/ChooseTxt"
        android:layout_width="331dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textStyle="italic"
        android:text="SELECT A TIME PERIOD:"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/gradientCurvedBg" />

    <!-- From Date Label TextView -->
    <TextView
        android:id="@+id/fromTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="88dp"
        android:text="FROM:"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <!-- From Date EditText (Date Picker) -->
    <EditText
        android:id="@+id/etFromDate"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/edit_text_bg"
        android:hint="SELECT DATE"
        android:inputType="none"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/fromTxt"
        app:layout_constraintStart_toEndOf="@id/fromTxt"
        app:layout_constraintTop_toTopOf="@id/fromTxt" />

    <!-- To Date Label TextView -->
    <TextView
        android:id="@+id/toTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TO:"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/etFromDate"
        app:layout_constraintStart_toEndOf="@id/etFromDate"
        app:layout_constraintTop_toTopOf="@id/etFromDate" />

    <!-- To Date EditText (Date Picker) -->
    <EditText
        android:id="@+id/etToDate"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/edit_text_bg"
        android:hint="SELECT DATE"
        android:inputType="none"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/toTxt"
        app:layout_constraintStart_toEndOf="@id/toTxt"
        app:layout_constraintTop_toTopOf="@id/toTxt" />

    <!-- Apply Button for Filter -->
    <Button
        android:id="@+id/btnFilter"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/white_button_border"
        android:paddingHorizontal="16dp"
        android:text="APPLY"
        android:textColor="#FF00CC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toTxt" />

    <!-- Title TextView for Spending Over Time -->
    <TextView
        android:id="@+id/CHOOSEDATEtxt3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="DAILY SPENDING OVER TIME PERIOD"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:textSize="18sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fromTxt" />

    <!-- Bar Chart for Displaying Spending Data -->

    <!-- Apply Button for Filter -->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="405dp"
        android:layout_height="247dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CHOOSEDATEtxt3"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingClass" />

    <!-- Bottom Navigation Bar -->
    <Button
        android:id="@+id/btnViewCat"
        android:layout_width="226dp"
        android:layout_height="38dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/pastel_green_blue_gradient"
        android:paddingHorizontal="16dp"
        android:text="VIEW CATEGORY LIMITS"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barChart" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled" />

</androidx.constraintlayout.widget.ConstraintLayout>
